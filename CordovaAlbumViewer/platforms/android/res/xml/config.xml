<?xml version='1.0' encoding='utf-8'?>
<widget id="io.cordova.CordovaAlbumViewer" version="0.1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0" xmlns:vs="http://schemas.microsoft.com/appx/2014/htmlapps">
    <preference name="loglevel" value="DEBUG" />
    <feature name="StatusBar">
        <param name="android-package" onload="true" value="org.apache.cordova.statusbar.StatusBar" />
    </feature>
    <name>West Wind Album Viewer</name>
    <description>Sample application that lets you browse and edit Music Albums.</description>
    <author email="rstrahl@west-wind.com" href="http://weblog.west-wind.com">Rick Strahl</author>
    <content src="index.html" />
    <access origin="*" />
    <preference name="SplashScreen" value="screen" />
    <preference name="windows-target-version" value="8.0" />
    <preference name="windows-phone-target-version" value="8.1" />
    <preference name="BackupWebStorage" value="local" />
    <preference name="StatusBarOverlaysWebView" value="true" />
    <preference name="StatusBarBackgroundColor" value="#535353" />
    <preference name="StatusBarStyle" value="lightcontent" />
    <preference name="Fullscreen" value="false" />
    <vs:plugin name="org.apache.cordova.statusbar" version="0.1.8" />
    <vs:platformSpecificValues>
        <vs:platformSpecificWidget id="com.westwind.albumviewer" platformName="windows" version="0.1.0.0">
            <vs:name>West Wind Album Viewer</vs:name>
        </vs:platformSpecificWidget>
    </vs:platformSpecificValues>
</widget>
